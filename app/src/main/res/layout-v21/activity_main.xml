<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/recommended_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/recommended_music"
        android:textAllCaps="false"
        android:textColor="@android:color/background_dark"
        android:textSize="@dimen/title_font_size"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/list"
        android:layout_width="@dimen/value_decided_by_constrain"
        android:layout_height="@dimen/value_decided_by_constrain"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recommended_title" />


    <ImageView
        android:id="@+id/button_added_songs_icon"
        android:layout_width="@dimen/value_decided_by_constrain"
        android:layout_height="@dimen/value_decided_by_constrain"
        android:layout_marginBottom="@dimen/small_margin"
        android:layout_marginEnd="@dimen/small_margin"
        android:layout_marginLeft="@dimen/small_margin"
        android:layout_marginRight="@dimen/small_margin"
        android:layout_marginStart="@dimen/small_margin"
        android:layout_marginTop="@dimen/small_margin"
        android:paddingBottom="@dimen/small_margin"
        android:elevation="@dimen/default_elevation"
        android:paddingTop="@dimen/small_margin"
        android:src="@drawable/added_songs_icon"
        app:layout_constraintBottom_toBottomOf="@+id/button_added_songs"
        app:layout_constraintEnd_toEndOf="@+id/button_added_songs"
        app:layout_constraintStart_toStartOf="@+id/button_added_songs"
        app:layout_constraintTop_toTopOf="@+id/button_added_songs"
        android:contentDescription="@string/img_desc_added_songs_button" />

    <Button
        android:id="@+id/button_added_songs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/small_margin"
        android:layout_marginEnd="@dimen/small_margin"
        android:background="@drawable/added_songs_button"
        android:elevation="@dimen/default_elevation"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</android.support.constraint.ConstraintLayout>