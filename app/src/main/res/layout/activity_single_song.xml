<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="@dimen/layout_weight_higher">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/song_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/small_margin"
                android:gravity="center_horizontal"
                android:textSize="@dimen/default_font_size"
                tools:text="Song Name" />

            <ImageView
                android:id="@+id/song_image"
                android:layout_width="match_parent"
                android:layout_height="@dimen/img_size_single_song_height"
                android:contentDescription="@string/img_desc_single_song"
                android:gravity="center_horizontal"
                android:scaleType="centerCrop"
                android:src="@drawable/no_image" />

            <TextView
                android:id="@+id/song_authors"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/medium_margin"
                android:gravity="center_horizontal"
                android:textColor="@android:color/black"
                tools:text="Authors" />

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/main_ui_height"
        android:background="@drawable/main_ui_gradient"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/volume_b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/small_margin"
            android:layout_marginLeft="@dimen/medium_margin"
            android:layout_marginRight="@dimen/medium_margin"
            android:layout_marginTop="@dimen/small_margin"
            android:layout_weight="@dimen/layout_weight_higher"
            android:contentDescription="@string/img_desc_volume_button"
            android:src="@drawable/volume_mute_button" />

        <ImageView
            android:id="@+id/rewind_b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/small_margin"
            android:layout_marginLeft="@dimen/medium_margin"
            android:layout_marginRight="@dimen/medium_margin"
            android:layout_marginTop="@dimen/small_margin"
            android:layout_weight="@dimen/layout_weight_higher"
            android:contentDescription="@string/img_desc_rewind_button"
            android:src="@drawable/rewind_arrow_button" />

        <ImageView
            android:id="@+id/play_b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/small_margin"
            android:layout_marginLeft="@dimen/medium_margin"
            android:layout_marginRight="@dimen/medium_margin"
            android:layout_marginTop="@dimen/small_margin"
            android:layout_weight="@dimen/layout_weight_higher"
            android:contentDescription="@string/img_desc_play_button"
            android:src="@drawable/pause_button" />

        <ImageView
            android:id="@+id/fast_forward_b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/small_margin"
            android:layout_marginLeft="@dimen/medium_margin"
            android:layout_marginRight="@dimen/medium_margin"
            android:layout_marginTop="@dimen/small_margin"
            android:layout_weight="@dimen/layout_weight_higher"
            android:contentDescription="@string/img_desc_forward_button"
            android:src="@drawable/fast_forward_arrow_button" />

        <ImageView
            android:id="@+id/add_song_b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/small_margin"
            android:layout_marginLeft="@dimen/medium_margin"
            android:layout_marginRight="@dimen/medium_margin"
            android:layout_marginTop="@dimen/small_margin"
            android:layout_weight="@dimen/layout_weight_higher"
            android:contentDescription="@string/img_desc_add_song_button"
            android:src="@drawable/add_song_button" />
    </LinearLayout>
</LinearLayout>